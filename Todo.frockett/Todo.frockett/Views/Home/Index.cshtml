@{
    ViewData["Title"] = "Todo App";
}

<div class="text-center">
    <h1>Todo App</h1>

    <div id="todoList">
        <!-- Todo items will be populated here via JavaScript -->
    </div>

    <button id="addTodo" onclick="toggleAddForm()">Add Todo</button>

    <div id="addTodoForm" style="display:none;">
        <h2>Add New Todo</h2>
        <form action="javascript:void(0);" onsubmit="addItem()">
            <label for="add-name">Todo Name:</label>
            <input type="text" id="add-name" name="add-name" required>
            <input type="submit" value="Add">
        </form>
    </div>

    <div id="editForm" style="display:none;">
        <h3>Edit Todo</h3>
        <form action="javascript:void(0);" onsubmit="updateItem()">
            <input type="hidden" id="edit-id">
            <input type="checkbox" id="edit-isComplete"> Is Complete
            <input type="text" id="edit-title">
            <input type="submit" value="Save">
            <a onclick="closeInput()" aria-label="Close" style="cursor: pointer;">&#10006;</a>
        </form>
    </div>
</div>

<div id="deleteModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <p>Are you sure you want to delete this todo?</p>
        <button onclick="confirmDelete()">Yes, Delete it</button>
        <button onclick="closeModal()">Cancel</button>
    </div>
</div>


<script src="~/js/site.js"></script>
