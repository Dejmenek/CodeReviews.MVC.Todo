@{
    ViewData["Title"] = "Home Page";
}

<h1>Todo App</h1>
<form method="post" onsubmit="addItem(event)">
    <input type="text" id="add-name" placeholder="Task Title" />
    <button type="submit" class="add-btn">Add</button>
</form>

<div id="editForm">
    <h3>Edit</h3>
    <form onsubmit="updateItem(event)">
        <input type="hidden" id="edit-id">
        <label class="custom-checkbox">
            <input type="checkbox" id="edit-isComplete">
            <span class="checkmark"></span>
        </label>
        <input type="text" id="edit-name">
        <button class="add-btn">Save</button>
        <a onclick="closeInput()" aria-label="Close">&#10006;</a>
    </form>
</div>


<p id="counter"></p>

<div id="todos"></div>
<div class="toast-container position-fixed top-0 end-0" id="toast-container">

</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        getItems();
    });
</script>
